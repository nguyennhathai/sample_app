<li id="<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.avatar_size), micropost.user %>
  <span class="user"><%= link_to delegate :name, to :user, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t ".post" %> <%= time_ago_in_words micropost.created_at %> <%= t ".ago" %>
      <% if current_user? micropost.user %>
        <%= link_to t(".delete"), micropost, method: :delete,
          data: {confirm: <%= t ".you_sure" %>} %>
    <% end %>
  </span>
</li>
